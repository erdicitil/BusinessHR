@model IEnumerable<BusinessHR.Admin.Models.SalaryViewModel>
@using BusinessHR.Admin.Extensions
@using System.ComponentModel.DataAnnotations


    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <i class="fas fa-fw fa-home"></i>
            <a href="@Url.Action("Index","Home")" style="color:black">Giriş</a>
        </li>
        <li class="breadcrumb-item active"><a href="@Url.Action("Index","Salaries")" style="color:black">Maaşlar</a></li>

    </ol>
    <h4 class="mx-4">Maaşlar</h4>
    <hr />
    <p>
        <a href="@Url.Action("Create")" class="btn btn-primary mx-4">Yeni Maaş</a>
    </p>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Maas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BrutMaas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NetMaas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.AGI)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.KGV)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Odenen)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Durum)
                    </th>

                   
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Maas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BrutMaas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NetMaas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AGI)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.KGV)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Odenen)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Durum)
                        </td>
                        <
                        <td>
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id } , new {@class = "btn btn-success btn-sm" }) 
                            @Html.ActionLink("Detaylar", "Details", new { id = item.Id } , new { @class = "btn btn-info btn-sm" }) 
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id } , new { @class = "btn btn-danger btn-sm" })
                        </td>
                    </tr>
                }

            </table>
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>
            </div>
        </div>

