@model IEnumerable<BusinessHR.Admin.Models.CertificateViewModel>
@using BusinessHR.Admin.Extensions
@using System.ComponentModel.DataAnnotations

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <i class="fas fa-fw fa-home"></i>
        <a href="@Url.Action("Index","Home")" style="color:black">Giriş</a>
    </li>
    <li class="breadcrumb-item active"><a href="@Url.Action("Index","Certificates")" style="color:black">Sertifikalar</a></li>

</ol>
<h4 class="mx-4">Sertifikalar</h4>
<hr />
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary mx-4">Yeni Sertifika</a>
</p>
<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th> @Html.DisplayNameFor(model => model.Name)</th>
                    <th>Eylemler</th>

                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th> @Html.DisplayNameFor(model => model.Name)</th>
                    <th>Eylemler</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>

                        <td nowrap>
                            @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                            @Html.ActionLink("Detaylar", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </td>


                    </tr>
                }
            </tbody>
        </table>
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>
    </div>
</div>