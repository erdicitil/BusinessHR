@model IEnumerable<BusinessHR.Admin.Models.PermissionViewModel>
@using BusinessHR.Admin.Extensions
@using System.ComponentModel.DataAnnotations

@{
    ViewBag.Title = "İzin";
}

<h2>İzin</h2>

<p>
    @Html.ActionLink("Yeni İzin", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PermissionTypeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PermissionStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PermissionEndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PermissionTime)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PermissionTime)
            </td>
             

            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.Id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
