@model IEnumerable<BusinessHR.Admin.Models.EmployeeViewModel>
@using BusinessHR.Admin.Extensions
@using System.ComponentModel.DataAnnotations
@{
    ViewBag.Title = "Çalışanlar";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <i class="fas fa-fw fa-home"></i>
        <a href="@Url.Action("Index","Home")" style="color:black">Giriş</a>
    </li>
    <li class="breadcrumb-item active"><a href="@Url.Action("Index","Employees")" style="color:black">Personel</a></li>

</ol>
<h4 class="mx-4">Personeller</h4>

<p>
    @Html.ActionLink("Yeni Kişi", "Create")
</p>



<div class="card-body">
    <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    

                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.FullName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.DepartmentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PositionName)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.WorkStatus)
                    </th>
                    <th>Eylemler</th>

                </tr>
            </thead>
            
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Photo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.DepartmentName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PositionName)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkStatus)
                    </td>

                    <td nowrap>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-success btn-sm" })
                        @Html.ActionLink("Personel Detayları", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>

                </tr>
                }
            </tbody>
        </table>
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>
    </div>
</div>
