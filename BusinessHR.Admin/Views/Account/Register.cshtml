@model IdentitySample.Models.RegisterViewModel
@using BusinessHR.Admin.Models
@using IdentitySample.Models
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="container">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Yeni Kullanıcı Kaydı</div>
            <div class="card-body">
                <form>
                    <div class="form-group">

                    </div>
                    <div class="form-group">
                        Email
                        <div class="form-label-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                Parola
                                <div class="form-label-group">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                Parola Tekrar
                                <div class="form-label-group">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12 ">
                            <input type="submit" class="btn btn-primary btn-block" value="Kayıt Ol" />
                        </div>
                    </div>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="@Url.Action("Login", "Account")">Giriş</a>
                    <a class="d-block small" href="@Url.Action("ForgotPassword", "Account")">Parolamı Unuttum!</a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
