@{
    ViewBag.Title = "Email Onayı";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="container">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">@ViewBag.Title</div>
        <div class="card-body">
            <form>
                <div class="form-group">

                    Lütfen e-postanızı kontrol edin ve gelen tıklayarak e-posta adresinizi onaylayın.

                </div>
                <div class="form-group" data-validate="Password is required">
                    <div class="text-danger mx-3">
                        DEMO:
                        E-postayı onaylamak için bu <a href="@ViewBag.Link">bağlantıyı</a> kullanabilirsiniz:
                        Test işlemleri bittikten sonra bu paragrafı kaldırınız.
                    </div>
                </div>


            </form>

        </div>
    </div>
</div>